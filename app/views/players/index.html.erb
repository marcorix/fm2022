<h1>Players#index</h1>
<div class="container">
  <%= form_with url: players_path, method: :get, class: "d-flex" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a player"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>

  <br>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-sm-8">
        <div id="movies">
          <% @players.each do |player| %>
            <h4><%= player.name%></h4>
            <p><%= player.club %></p>
            <p><%= player.nationality %></p>
            <p><%= player.id %></p>
            <button data-action="click->favorite#send"
                    data-controller="favorite"
                    data-favorite-id-value="<%= player.id%>">
              <i class="fab fa-gratipay fa-2x" id='favorite-link'></i>
            </button>

          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>
